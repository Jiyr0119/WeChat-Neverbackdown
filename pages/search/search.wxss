page{
	background: #f5f5f5;
}
.search-box {
	height: 60rpx;
	line-height: 60rpx;
	background: #27c58a;
	padding: 5rpx 20rpx;
}
.search-input {
	height: 100%;
	background: #fff;
	margin-right: 100rpx;
	border-radius: 16rpx;
	padding: 0 20rpx;
	color: #212121;
	font-size: 32rpx;
}
.placeholder {
	color: #9e9e9e;
	font-size: 32rpx;
}
.search-button {
	position:absolute;
	right:30rpx;
	top: 16rpx;
	font-size:36rpx;
	padding:0;
	height:48rpx;
	line-height:48rpx;
	color:#fff;
}
.search-item {
	padding:20rpx;
	background:#fff;
	margin-bottom:20rpx;
	line-height:48rpx;
	color:#616161;
}
.search-item-area {
	font-size: 28rpx;
	color: #ff9800;
}
.wrapper{
    font-size:30rpx; 
}

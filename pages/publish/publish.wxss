page {
	background: #f5f5f5;
}
.area {
	padding: 0 20rpx;
	height: 100rpx;
	background: #fff;
	border-bottom: 1rpx solid #d5d5d5;
	vertical-align: middle;
	font-size: 32rpx;
}
.area:first-child {
	border-top: 1rpx solid #d5d5d5;
}
.area-title {
	display: block;
	float: left;
	width: 200rpx;
	line-height: 100rpx;
	color: #27c58a;
}
.area-info {
	overflow:hidden;
	margin-left: 200rpx;
	height: 100rpx;
	line-height: 100rpx;
	color: #9e9e9e;
	white-space:nowrap;
	text-overflow:ellipsis; 
}
.placeholder {
	color: #9e9e9e;
}
.btn {
	margin: 20rpx 20rpx 0 10px;
	height: 80rpx;
	line-height: 80rpx;
	background: #ff9800;
	border-radius: 8rpx;
	text-align: center;
	color: #fff;
}

.wrapper {
	position: absolute;
	left: 0;
	right: 0;
	top: 0;
	bottom: 0;
	background: #f5f5f5;
	border-top: 1rpx solid #ccc;
}
.succ-title {
	width: 480rpx;
	margin: 0 auto;
	line-height: 100rpx;
	font-weight: bold;
	text-align: center;
	color: #27c58a;
}
.succ-icon {
	position: relative;
	top: 24rpx;
	margin-right: 20rpx;
}
.succ-item {
	margin: 10rpx 40rpx;
	line-height: 48rpx;
	font-size: 32rpx;
	color: #27c58a;
	text-align: center;
}